<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back1"
    tools:context="ble.fretx.classic.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Start"
            android:id="@+id/button"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="start" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Stop"
            android:id="@+id/button2"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="stop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EXERCISE 1"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="E minor"
            android:id="@+id/Em2"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="em"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Asus2"
            android:id="@+id/asus2"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="asus2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EXERCISE 2"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="E Major"
            android:id="@+id/eMajor"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="emajor" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="A minor"
            android:id="@+id/aMinor"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="aminor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EXERCISE 3"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="G major"
            android:id="@+id/easyG"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="easyG" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="A major"
            android:id="@+id/dSeven"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="dseven" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EXERCISE 4"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="D7"
            android:id="@+id/cmajor"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="cmajor" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="D major"
            android:id="@+id/dmajor"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="dmajor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EXERCISE 4"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="C major"
            android:id="@+id/cmajor1"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="cmajor1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="F major"
            android:id="@+id/dmajor1"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:onClick="dmajor1"
            android:singleLine="false" />
    </LinearLayout>

    <Switch
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:text="Success"
        android:id="@+id/switch1"
        android:layout_gravity="right" />


</LinearLayout>
